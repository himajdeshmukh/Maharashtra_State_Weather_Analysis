def generate_insights_and_tables(df, folders):
    """Generate insights and summary tables and save to files"""
    print("\nüìà Generating insights and summary tables...")
    
    # 1. Decade-wise Comparative Table
    decade_summary = df.groupby('Decade').agg({
        'T2M': ['mean', 'std'],
        'T2M_MAX': 'mean',
        'T2M_MIN': 'mean', 
        'PRECTOTCORR': 'mean',
        'RH2M': 'mean',
        'WS10M': 'mean',
        'GWETTOP': 'mean',
        'GWETROOT': 'mean',
        'ALLSKY_SFC_SW_DWN': 'mean'
    }).round(2)
    
    # Save decade summary
    decade_summary.to_csv(f"{folders['tables']}/decade_summary.csv")
    decade_summary.to_excel(f"{folders['excel_reports']}/decade_summary.xlsx")
    
    # 2. Regional Analysis Table
    recent_data = df[df['Decade'] == '2015-2024']
    regional_summary = recent_data.groupby('Region').agg({
        'T2M': 'mean',
        'PRECTOTCORR': 'mean',
        'RH2M': 'mean',
        'WS10M': 'mean',
        'GWETTOP': 'mean',
        'GWETROOT': 'mean',
        'ALLSKY_SFC_SW_DWN': 'mean'
    }).round(2)
    
    regional_summary.to_csv(f"{folders['tables']}/regional_summary.csv")
    regional_summary.to_excel(f"{folders['excel_reports']}/regional_summary.xlsx")
    
    # 3. Climate Change Impact Analysis
    first_decade = df[df['Decade'] == '1985-1994'].mean(numeric_only=True)
    last_decade = df[df['Decade'] == '2015-2024'].mean(numeric_only=True)
    changes = ((last_decade - first_decade) / first_decade * 100).round(2)
    
    impact_df = pd.DataFrame({
        'Parameter': changes.index,
        'Change_%': changes.values,
        '1985-1994': first_decade.values.round(2),
        '2015-2024': last_decade.values.round(2)
    })
    
    impact_df.to_csv(f"{folders['tables']}/climate_change_impact.csv", index=False)
    impact_df.to_excel(f"{folders['excel_reports']}/climate_change_impact.xlsx", index=False)
    
    # 4. Detailed Statistical Analysis
    detailed_stats = df.groupby(['Decade', 'Region']).agg({
        'T2M': ['mean', 'std', 'min', 'max'],
        'PRECTOTCORR': ['mean', 'std', 'max'],
        'RH2M': ['mean', 'std']
    }).round(2)
    
    detailed_stats.to_csv(f"{folders['tables']}/detailed_statistics.csv")
    detailed_stats.to_excel(f"{folders['excel_reports']}/detailed_statistics.xlsx")
    
    # 5. Generate insights report
    generate_insights_report(df, folders, impact_df)
    
    print(f"‚úÖ All tables saved in: {folders['tables']}/")
    print(f"‚úÖ Excel reports saved in: {folders['excel_reports']}/")

def generate_insights_report(df, folders, impact_df):
    """Generate a comprehensive insights report"""
    print("\nüìù Generating insights report...")
    
    recent_data = df[df['Decade'] == '2015-2024']
    
    with open(f"{folders['insights']}/key_insights_report.txt", "w") as f:
        f.write("="*80 + "\n")
        f.write("MAHARASHTRA CLIMATE ANALYSIS - KEY INSIGHTS REPORT\n")
        f.write("="*80 + "\n\n")
        
        f.write("EXECUTIVE SUMMARY\n")
        f.write("-" * 50 + "\n")
        f.write(f"Analysis Period: 1985-2024 (40 years)\n")
        f.write(f"Regions Covered: {', '.join(df['Region'].unique())}\n")
        f.write(f"Districts Analyzed: {df['District'].nunique()}\n\n")
        
        f.write("KEY FINDINGS\n")
        f.write("-" * 50 + "\n")
        
        # Temperature insights
        temp_change = impact_df[impact_df['Parameter'] == 'T2M']['Change_%'].values[0]
        f.write(f"1. TEMPERATURE TRENDS:\n")
        f.write(f"   ‚Ä¢ Average temperature change: {temp_change}% since 1985-1994\n")
        
        # Rainfall insights
        rain_change = impact_df[impact_df['Parameter'] == 'PRECTOTCORR']['Change_%'].values[0]
        f.write(f"2. RAINFALL PATTERNS:\n")
        f.write(f"   ‚Ä¢ Rainfall change: {rain_change}% since 1985-1994\n")
        
        # Regional analysis
        f.write(f"3. REGIONAL VARIATIONS:\n")
        region_temp = recent_data.groupby('Region')['T2M'].mean().sort_values(ascending=False)
        for region, temp in region_temp.items():
            f.write(f"   ‚Ä¢ {region}: {temp:.1f}¬∞C average temperature\n")
        
        # Agricultural insights
        f.write(f"4. AGRICULTURAL IMPLICATIONS:\n")
        f.write(f"   ‚Ä¢ Regions with stable rainfall: Konkan, Western Maharashtra\n")
        f.write(f"   ‚Ä¢ Regions needing irrigation: Marathwada, Vidarbha\n")
        f.write(f"   ‚Ä¢ Soil moisture trends show {impact_df[impact_df['Parameter'] == 'GWETTOP']['Change_%'].values[0]:.1f}% change\n\n")
        
        f.write("RECOMMENDATIONS\n")
        f.write("-" * 50 + "\n")
        f.write("1. Water Management: Focus on rainwater harvesting in low-rainfall regions\n")
        f.write("2. Crop Planning: Adjust sowing dates based on temperature trends\n")
        f.write("3. Irrigation: Optimize water use in moisture-stressed regions\n")
        f.write("4. Climate Adaptation: Develop region-specific climate resilience strategies\n")
    
    print(f"‚úÖ Insights report saved in: {folders['insights']}/")

def create_summary_dashboard(df, folders):
    """Create a summary dashboard visualization"""
    print("\nüìä Creating summary dashboard...")
    
    fig, ((ax1, ax2), (ax3, ax4)) = plt.subplots(2, 2, figsize=(20, 15))
    
    # Dashboard panel 1: Temperature trends
    temp_trends = df.groupby(['Decade', 'Region'])['T2M'].mean().unstack()
    temp_trends.plot(kind='line', marker='o', linewidth=3, ax=ax1)
    ax1.set_title('Temperature Trends by Region', fontsize=16, fontweight='bold')
    ax1.set_ylabel('Temperature (¬∞C)')
    ax1.legend(bbox_to_anchor=(1.05, 1), loc='upper left')
    ax1.grid(True, alpha=0.3)
    
    # Dashboard panel 2: Rainfall patterns
    rain_trends = df.groupby(['Decade', 'Region'])['PRECTOTCORR'].mean().unstack()
    rain_trends.plot(kind='bar', ax=ax2)
    ax2.set_title('Rainfall Patterns by Region', fontsize=16, fontweight='bold')
    ax2.set_ylabel('Rainfall (mm/day)')
    ax2.legend(bbox_to_anchor=(1.05, 1), loc='upper left')
    ax2.grid(True, alpha=0.3)
    
    # Dashboard panel 3: Climate change impact
    changes_data = df.groupby('Decade')[['T2M', 'PRECTOTCORR', 'RH2M']].mean()
    changes_pct = (changes_data - changes_data.iloc[0]) / changes_data.iloc[0] * 100
    changes_pct.plot(kind='line', marker='s', linewidth=3, ax=ax3)
    ax3.set_title('Climate Change Impact (% Change)', fontsize=16, fontweight='bold')
    ax3.set_ylabel('Percentage Change (%)')
    ax3.axhline(y=0, color='red', linestyle='--', alpha=0.7)
    ax3.grid(True, alpha=0.3)
    ax3.legend(bbox_to_anchor=(1.05, 1), loc='upper left')
    
    # Dashboard panel 4: Regional comparison
    recent_data = df[df['Decade'] == '2015-2024']
    comparison_data = recent_data.groupby('Region')[['T2M', 'PRECTOTCORR', 'RH2M']].mean()
    comparison_data.plot(kind='bar', ax=ax4)
    ax4.set_title('Recent Climate Parameters (2015-2024)', fontsize=16, fontweight='bold')
    ax4.set_ylabel('Values')
    ax4.legend(bbox_to_anchor=(1.05, 1), loc='upper left')
    ax4.grid(True, alpha=0.3)
    
    plt.tight_layout()
    plt.savefig(f"{folders['visualizations']}/summary_dashboard.png", dpi=300, bbox_inches='tight')
    plt.close()
    
    print(f"‚úÖ Summary dashboard saved!")

def main():
    """Main execution function"""
    print("üöÄ Starting Maharashtra Climate Data Analysis...")
    
    # Create folder structure
    folders = create_results_folder()
    
    # Load data
    df = load_and_preprocess_data()
    
    # Create visualizations
    create_comprehensive_visualizations(df, folders)
    
    # Create summary dashboard
    create_summary_dashboard(df, folders)
    
    # Generate insights and tables
