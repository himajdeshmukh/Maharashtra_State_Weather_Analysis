        sampled_data = region_data.sample(n=min(1000, len(region_data)), random_state=42)
        plt.scatter(sampled_data['T2M'], sampled_data['PRECTOTCORR'], 
                   alpha=0.6, label=region, s=30)
    
    plt.title('üîÑ Temperature vs Rainfall Correlation by Region\n(Using Daily Averages)', 
              fontsize=14, fontweight='bold', pad=20)
    plt.xlabel('Temperature (¬∞C)')
    plt.ylabel('Rainfall (mm/day) - AVERAGE')
    plt.ylim(0, min(50, daily_region_avg['PRECTOTCORR'].max() * 1.1))  # Reasonable scale
