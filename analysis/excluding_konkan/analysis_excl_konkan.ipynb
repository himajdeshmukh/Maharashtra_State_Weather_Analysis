def create_comprehensive_visualizations(df, folders):
    """Create all visualizations and save automatically"""
    print("\nüé® Creating comprehensive visualizations...")
    
    # Ensure rainfall data is average, not sum
    # Group by Date and Region to get daily averages
    daily_region_avg = df.groupby(['Date', 'Region']).agg({
        'T2M': 'mean',
        'PRECTOTCORR': 'mean',  # This ensures average rainfall per region per day
        'RH2M': 'mean',
        'WS10M': 'mean',
        'GWETTOP': 'mean',
        'GWETROOT': 'mean',
        'ALLSKY_SFC_SW_DWN': 'mean',
        'T2M_MAX': 'mean',
        'T2M_MIN': 'mean'
    }).reset_index()
    
    daily_region_avg['Decade'] = pd.cut(daily_region_avg['Date'].dt.year, 
                                      bins=[1985, 1995, 2005, 2015, 2025], 
                                      labels=['1985-1994', '1995-2004', '2005-2014', '2015-2024'], 
                                      right=False)

    # 1. Temperature Trends by Decade and Region
    fig, ax = plt.subplots(figsize=(12, 8))
    temp_trends = daily_region_avg.groupby(['Decade', 'Region'])['T2M'].mean().unstack()
    temp_trends.plot(kind='line', marker='o', linewidth=3, ax=ax)
    plt.title('üå°Ô∏è Average Temperature Trends by Region & Decade', fontsize=14, fontweight='bold', pad=20)
    plt.xlabel('Decade')
    plt.ylabel('Temperature (¬∞C)')
    plt.legend(bbox_to_anchor=(1.05, 1), loc='upper left')
    plt.grid(True, alpha=0.3)
    plt.xticks(rotation=45)
    plt.tight_layout()
    plt.savefig(f"{folders['visualizations']}/01_temperature_trends.png", dpi=300, bbox_inches='tight')
    plt.close()
    
    # 2. Rainfall Patterns by Decade and Region (USING AVERAGE)
    fig, ax = plt.subplots(figsize=(12, 8))
    rain_trends = daily_region_avg.groupby(['Decade', 'Region'])['PRECTOTCORR'].mean().unstack()
    rain_trends.plot(kind='bar', ax=ax)
    plt.title('üåßÔ∏è Average Rainfall Patterns by Region & Decade\n(Using Daily Averages)', fontsize=14, fontweight='bold', pad=20)
    plt.xlabel('Decade')
    plt.ylabel('Rainfall (mm/day) - AVERAGE')
    plt.legend(bbox_to_anchor=(1.05, 1), loc='upper left')
    plt.grid(True, alpha=0.3)
    plt.xticks(rotation=45)
    plt.tight_layout()
    plt.savefig(f"{folders['visualizations']}/02_rainfall_patterns.png", dpi=300, bbox_inches='tight')
    plt.close()
    
    # 3. Temperature-Rainfall Correlation by Region (WITH CORRECTED UNITS)
    fig, ax = plt.subplots(figsize=(12, 8))
    
    # Use daily averages to avoid summing across districts
    for region in daily_region_avg['Region'].unique():
        region_data = daily_region_avg[daily_region_avg['Region'] == region]
