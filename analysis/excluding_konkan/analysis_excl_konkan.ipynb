def create_results_folder():
    """Create folder structure for saving results"""
    timestamp = datetime.now().strftime("%Y%m%d_%H%M%S")
    base_folder = f"output/Maharashtra_Climate_Analysis_Excl_Konkan_{timestamp}"
    
    folders = {
        'base': base_folder,
        'visualizations': f"{base_folder}/visualizations",
        'tables': f"{base_folder}/tables",
        'insights': f"{base_folder}/insights",
        'excel_reports': f"{base_folder}/excel_reports"
    }
    
    for folder in folders.values():
        os.makedirs(folder, exist_ok=True)
    
    print(f"üìÅ Results will be saved in: {base_folder}/")
    return folders

def load_and_preprocess_data():
    """Load and preprocess the climate data - EXCLUDING KONKAN"""
    print("üìä Loading data...")
    
    file_path = "data/maharashtra_weather_data.xlsx"
    df = pd.read_excel(file_path, sheet_name='All_Districts')
    
    df['Date'] = pd.to_datetime(df['Date'])
    df['Year'] = df['Date'].dt.year
    df['Month'] = df['Date'].dt.month
    df['DayOfYear'] = df['Date'].dt.dayofyear
    
    df['Season'] = df['Month'].apply(
        lambda x: 'Winter' if x in [12,1,2] else
                  'Summer' if x in [3,4,5] else
                  'Monsoon' if x in [6,7,8,9] else
                  'Post-Monsoon'
    )
    
    df['Decade'] = pd.cut(
        df['Year'],
        bins=[1985, 1995, 2005, 2015, 2025],
        labels=['1985-1994', '1995-2004', '2005-2014', '2015-2024'],
        right=False
    )
    
    original_count = len(df)
    df = df[df['Region'] != 'Konkan']
    removed_count = original_count - len(df)
    
    print(f"‚úÖ Data loaded successfully!")
    print(f"   Period: {df['Date'].min().date()} to {df['Date'].max().date()}")
    print(f"   Districts: {df['District'].nunique()}")
    print(f"   Regions: {', '.join(df['Region'].unique())}")
    print(f"   Konkan excluded: {removed_count:,} records removed")
    print(f"   Total records: {len(df):,}")
    
    return df

def analyze_monsoon_patterns(df, folders):
    """Analyze monsoon onset, duration, and withdrawal patterns"""
    print("\nüåßÔ∏è Analyzing monsoon patterns...")
    
    # Focus on monsoon months (June to September)
    monsoon_months = df[df['Month'].isin([6, 7, 8, 9])].copy()
    
    # Calculate yearly monsoon characteristics by region
    monsoon_analysis = []
    
    for year in df['Year'].unique():
        for region in df['Region'].unique():
            year_region_data = df[(df['Year'] == year) & (df['Region'] == region)]
            
            if len(year_region_data) == 0:
                continue
                
            # Find monsoon onset (first day with significant rain after June 1)
            june_data = year_region_data[
                (year_region_data['Month'] == 6) & 
                (year_region_data['PRECTOTCORR'] > 2)  # Threshold for monsoon rain
            ]
            
            if not june_data.empty:
                onset_date = june_data['Date'].min()
                onset_day = june_data['DayOfYear'].min()
                
                # Find monsoon withdrawal (last day with significant rain in September)
                sept_data = year_region_data[
                    (year_region_data['Month'] == 9) & 
                    (year_region_data['PRECTOTCORR'] > 2)
                ]
                
                if not sept_data.empty:
                    withdrawal_date = sept_data['Date'].max()
                    withdrawal_day = sept_data['DayOfYear'].max()
                    
                    # Calculate duration
                    duration = withdrawal_day - onset_day
                    
                    # Calculate average monsoon rainfall (June-Sept)
                    monsoon_rain = year_region_data[
                        year_region_data['Month'].isin([6,7,8,9])
                    ]['PRECTOTCORR'].mean()
                    
                    monsoon_analysis.append({
                        'Year': year,
                        'Region': region,
                        'Onset_Day': onset_day,
                        'Withdrawal_Day': withdrawal_day,
                        'Duration': duration,
                        'Avg_Monsoon_Rainfall': monsoon_rain
                    })
    
    monsoon_df = pd.DataFrame(monsoon_analysis)
    
    if not monsoon_df.empty:
        # Add decade information
        monsoon_df['Decade'] = pd.cut(monsoon_df['Year'], 
                                    bins=[1985, 1995, 2005, 2015, 2025], 
                                    labels=['1985-1994', '1995-2004', '2005-2014', '2015-2024'], 
                                    right=False)
        
        # Save monsoon analysis
        monsoon_df.to_csv(f"{folders['tables']}/monsoon_analysis.csv", index=False)
        monsoon_df.to_excel(f"{folders['excel_reports']}/monsoon_analysis.xlsx", index=False)
        
        # Create monsoon trend visualizations
        create_monsoon_visualizations(monsoon_df, folders)
        
        return monsoon_df
    else:
        print("‚ö†Ô∏è  No monsoon data found for analysis")
        return pd.DataFrame()

