def create_significance_summary_table(df, folders):
    """Create a short summary table showing significant changes with comments"""
    print("\nüìä Creating significance summary table...")
    
    # Calculate decade-wise averages for key parameters
    first_decade = df[df['Decade'] == '1985-1994']
    last_decade = df[df['Decade'] == '2015-2024']
    
    summary_data = []
    
    for region in df['Region'].unique():
        region_first = first_decade[first_decade['Region'] == region]
        region_last = last_decade[last_decade['Region'] == region]
        
        if len(region_first) == 0 or len(region_last) == 0:
            continue
            
        # Calculate changes
        temp_change = region_last['T2M'].mean() - region_first['T2M'].mean()
        rain_change_pct = ((region_last['PRECTOTCORR'].mean() - region_first['PRECTOTCORR'].mean()) / 
                          max(region_first['PRECTOTCORR'].mean(), 0.001) * 100)  # Avoid division by zero
        humidity_change = region_last['RH2M'].mean() - region_first['RH2M'].mean()
        
        # Determine significance and trend
        temp_trend = "‚Üë Increasing" if temp_change > 0.5 else "‚Üì Decreasing" if temp_change < -0.5 else "‚Üî Stable"
        rain_trend = "‚Üë Increasing" if rain_change_pct > 5 else "‚Üì Decreasing" if rain_change_pct < -5 else "‚Üî Stable"
        humidity_trend = "‚Üë Increasing" if humidity_change > 2 else "‚Üì Decreasing" if humidity_change < -2 else "‚Üî Stable"
        
        # Add comments based on magnitude
        temp_comment = "Significant warming" if temp_change > 1 else "Moderate warming" if temp_change > 0.5 else "Minimal change"
        if temp_change < 0:
            temp_comment = "Significant cooling" if temp_change < -1 else "Moderate cooling" if temp_change < -0.5 else "Minimal change"
            
        rain_comment = "Substantial increase" if rain_change_pct > 10 else "Moderate increase" if rain_change_pct > 5 else "Minimal change"
        if rain_change_pct < 0:
            rain_comment = "Substantial decrease" if rain_change_pct < -10 else "Moderate decrease" if rain_change_pct < -5 else "Minimal change"
        
        summary_data.append({
            'Region': region,
            'Temperature_Change_C': round(temp_change, 2),
            'Temperature_Trend': temp_trend,
            'Temperature_Comment': temp_comment,
            'Rainfall_Change_%': round(rain_change_pct, 1),
            'Rainfall_Trend': rain_trend,
            'Rainfall_Comment': rain_comment,
            'Humidity_Change_%': round(humidity_change, 1),
            'Humidity_Trend': humidity_trend
        })
    
    summary_df = pd.DataFrame(summary_data)
    
    # Save summary table
    summary_df.to_csv(f"{folders['tables']}/significance_summary.csv", index=False)
    summary_df.to_excel(f"{folders['excel_reports']}/significance_summary.xlsx", index=False)
    
    # Print summary table
    print("\n" + "="*80)
    print("SIGNIFICANCE SUMMARY TABLE")
    print("="*80)
    print(summary_df.to_string(index=False))
    
    print("‚úÖ Significance summary table created")
    return summary_df

def generate_insights_and_tables(df, folders, monsoon_df, summary_df):
    """Generate insights and summary tables and save to files"""
    print("\nüìà Generating insights and summary tables...")
    
    # 1. Decade-wise Comparative Table
    decade_summary = df.groupby('Decade').agg({
        'T2M': ['mean', 'std'],
        'T2M_MAX': 'mean',
        'T2M_MIN': 'mean', 
        'PRECTOTCORR': 'mean',
        'RH2M': 'mean',
        'WS10M': 'mean',
        'GWETTOP': 'mean',
        'GWETROOT': 'mean',
        'ALLSKY_SFC_SW_DWN': 'mean'
    }).round(2)
    
    # Save decade summary
    decade_summary.to_csv(f"{folders['tables']}/decade_summary.csv")
    decade_summary.to_excel(f"{folders['excel_reports']}/decade_summary.xlsx")
    
    # 2. Regional Analysis Table
    recent_data = df[df['Decade'] == '2015-2024']
    regional_summary = recent_data.groupby('Region').agg({
        'T2M': 'mean',
        'PRECTOTCORR': 'mean',
        'RH2M': 'mean',
        'WS10M': 'mean',
        'GWETTOP': 'mean',
        'GWETROOT': 'mean',
        'ALLSKY_SFC_SW_DWN': 'mean'
    }).round(2)
    
    regional_summary.to_csv(f"{folders['tables']}/regional_summary.csv")
    regional_summary.to_excel(f"{folders['excel_reports']}/regional_summary.xlsx")
    
    # 3. Climate Change Impact Analysis
    first_decade_avg = df[df['Decade'] == '1985-1994'].mean(numeric_only=True)
    last_decade_avg = df[df['Decade'] == '2015-2024'].mean(numeric_only=True)
    changes = ((last_decade_avg - first_decade_avg) / first_decade_avg * 100).round(2)
    
    impact_df = pd.DataFrame({
        'Parameter': changes.index,
        'Change_%': changes.values,
        '1985-1994': first_decade_avg.values.round(2),
        '2015-2024': last_decade_avg.values.round(2)
    })
    
    impact_df.to_csv(f"{folders['tables']}/climate_change_impact.csv", index=False)
    impact_df.to_excel(f"{folders['excel_reports']}/climate_change_impact.xlsx", index=False)
    
    # 4. Generate comprehensive insights report
    generate_insights_report(df, folders, monsoon_df, summary_df, impact_df)
    
    print(f"‚úÖ All tables saved in: {folders['tables']}/")
    print(f"‚úÖ Excel reports saved in: {folders['excel_reports']}/")

