    plt.grid(True, alpha=0.3)
    plt.tight_layout()
    plt.savefig(f"{folders['visualizations']}/03_temp_rain_correlation.png", dpi=300, bbox_inches='tight')
    plt.close()
    
    # 4. Seasonal Temperature Variations
